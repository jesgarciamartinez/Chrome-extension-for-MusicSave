    "default_icon": "icon_19.png",
    "default_popup": "popup.html",
    "default_title": "Save track!"
  },
  // "content_scripts": [ {
  //     "js": [ "jquery-2.1.1.min.js", "background.js" ],
  //     "matches": [ "http://youtube.com/*", "https://youtube.com/*"]

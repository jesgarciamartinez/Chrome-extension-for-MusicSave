{
  "name": "My Extension",
  "version": "0.1",
  "description": "Gets URL and title from Youtube.",
  "icons": { "128": "icon_19.png" },
  "manifest_version": 2,
  // "background": {
  //   "persistent": false,
  //   "scripts": ["background.js"]
  // },
  // "permissions": ["http://*.google.com/", "https://*.google.com/"],
  "permissions": [

{
  "name": "My Extension",
  "version": "0.1",
  "description": "Gets URL and title from Youtube.",
  "icons": { "128": "icon_off.png" },
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon_off.png",
    "default_popup": "popup.html",
    "default_title": "Save track!"
  },
  // "content_scripts": [ {
  //     "matches": ["*://youtube.com/*"],
  //     "js": ["jquery-2.1.1.min.js", "content.js"]
  // }]
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["jquery-2.1.1.min.js", "content.js"]
  }],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      }
    }
  }
}